@import("../../stylus/index.styl");
    .cate
        display: flex
      .cate-left
        width:2rem 
        li
            text-align: center
            font-size: $h3 
            color: $font-color1
            line-height: $headerHeight
         .active
             color: $primary
             border-left: $padding solid $price-color  
      .cate-right
        flex: 1
        .item
          float left
          width 50%

          .con
            margin: $margin
            height: 2rem
            border-radius: $margin
            overflow hidden
            position relative
            img 
              width 100% 
              height: 100%  
            span
                position absolute
                left 0
                bottom: 0
                background: $primary
                color: $font-fff
                width: 100% 
                text-align: center 
                line-height: 0.4rem